page {
  height: 100%;
  background-color: greenyellow;
}

.mask {
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border: 3px solid #ffc107;
  border-radius: 100%;
  width: 80%;
  height: 80%;
  margin: auto;
  position: absolute;
  box-shadow: 0 0 0 2000px rgba(173, 255, 47, 1.0);
}

.camera {
  width: 100%;
  height: 100%;
}