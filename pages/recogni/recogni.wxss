/* pages/recogni/recogni.wxss */
page {
  height: 100%;
  background-color: #F8F8FF;
}

.camera {
  width: 100%;
  height: 100%;
  border: 2vh;
}

.circle-mask {
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border: 3px solid #ff8c00;
  border-radius: 100%;
  width: 85vw;
  height: 85vw;
  margin: auto;
  position: absolute;
  box-shadow: 0 0 0 2000px rgba(248, 248, 255, 1.0);
}

.square-mask {
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border: 4px solid #ff8c00;
  border-radius: 10%;
  width: 90%;
  height: 90%;
  margin: auto;
  position: absolute;
  box-shadow: 0 0 0 2000px rgba(248, 248, 255, 1.0);
}

.tips-box {
  top: 2%;
  left: 2%;
  right: 2%;
  bottom: 2%;
  margin: 20px;
}

/* 识别信息展示 */
.card-box {
  display: flex;
  margin: 16px 20px;
  border: 2rpx solid black;
}

/* 左边图片 */
.card-image {
  border: 20px;
}

.card-image image {
  width: 100px;
  height: 100px;
  border-radius: 5%;
  background-color: aliceblue;
  margin: 6rpx 6rpx;
}

.info-box {
  margin-top: 5px;
  margin-left: 20px;
}

.button-box {
  display: flex;
  flex-direction: row;
  margin: 5px;
  justify-content: space-around;
  padding-bottom: 20rpx;
}

.button-style {
  width: 120px !important;
  border: 2rpx solid black;
  border-radius: 5%;
}

.slide-left {
  width: 32rpx;
  height: 32rpx;
}

.icon-export {
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid black;
  margin: 0 auto;
  width: 90%;
  height: 36px;
}