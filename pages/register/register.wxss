/* pages/logon/logon.wxss */
page {
    margin-top: 45px;
    height: 100%;
    background-color: #f2f2f2;
}

.sep-line {
    padding-top: 20px;
}

.item {
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    height: 30px;
    width: 85%;
    border-radius: 3px;
    margin-bottom: 12px;
}

.title {
    height: 30px;
    width: 40px;
    margin-top: 5px;
    margin-right: 5px;
    font-weight: bold;
}

.item input {
    height: 30px;
    width: 85%;
    margin-left: 5px;
    border: 1px solid #cccccc;
    background-color: #ffffff;
}

.item switch {
    margin: 2px 2px;
    size: 30px;
}
